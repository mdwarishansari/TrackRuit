{
  "manifest_version": 3,
  "name": "TrackRuit - Secure Job Tracker",
  "version": "1.1.0",
  "description": "Automatically and securely track job applications across platforms",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "alarms"
  ],

  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.internshala.com/*",
    "https://*.unstop.com/*",
    "https://*.indeed.com/*",
    "http://localhost:3000/*",
    "https://*.trackruit.onrender.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.internshala.com/*",
        "https://*.unstop.com/*",
        "https://*.indeed.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "TrackRuit - Secure Job Tracker"
  },

  "options_page": "options.html"
}